# Trading Farm Dashboard - Environment Configuration
# Copy this file to .env and update values before deployment

# Database Connection
DATABASE_URL=postgresql://tradingfarm:tradingfarm_secure_password@timescaledb:5432/tradingfarm
DATABASE_CONNECTION_TIMEOUT=5000

# Redis Cache
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# MCP Server Configuration
NEXT_PUBLIC_MCP_SERVER_URL=http://localhost:8000
MCP_SERVER_LOG_LEVEL=info
MCP_SERVER_CACHE_ENABLED=true

# Next.js Settings
NODE_ENV=production

# OpenRouter Integration
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1
DEFAULT_MODEL=gpt-3.5-turbo

# Market Data Providers
# MarketStack API for stock market data
MARKETSTACK_API_KEY=your_marketstack_key_here

# Exchange API Keys (for live trading - use with caution)
BINANCE_API_KEY=your_binance_key_here
BINANCE_API_SECRET=your_binance_secret_here

COINBASE_API_KEY=your_coinbase_key_here
COINBASE_API_SECRET=your_coinbase_secret_here

ALPACA_API_KEY=your_alpaca_key_here
ALPACA_API_SECRET=your_alpaca_secret_here

# Monitoring & Security
PROMETHEUS_METRICS_ENABLED=true
METRICS_PORT=9090
LOGS_RETENTION_DAYS=30
API_RATE_LIMIT=100

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@tradingfarm.com
SMTP_PASSWORD=your_smtp_password

# Deployment Settings (for CI/CD)
DOCKERHUB_USERNAME=your_dockerhub_username
PRODUCTION_SERVER=tradingfarm.example.com
