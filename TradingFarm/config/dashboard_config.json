{
    "app_title": "Hyperliquid Arbitrum Trading Dashboard",
    "metrics_path": "metrics",
    "signals_file": "metrics/signals.json",
    "trades_file": "metrics/trades.json",
    "update_interval_seconds": 30,
    "exchanges": ["hyperliquid", "arbitrum"],
    "display_options": {
        "show_strategy_performance": true,
        "show_signal_analysis": true,
        "show_trading_activity": true,
        "show_portfolio_allocation": true,
        "show_risk_metrics": true
    },
    "chart_defaults": {
        "history_days": {
            "strategy_performance": 30,
            "signal_confidence": 14,
            "order_execution": 14,
            "drawdown": 30
        },
        "colors": {
            "profit": "#27ae60",
            "loss": "#e74c3c",
            "neutral": "#3498db"
        }
    }
}
