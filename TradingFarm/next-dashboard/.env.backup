# Trading Farm Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_PROJECT_ID=your-production-project-id

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.tradingfarm.com/v1
API_SECRET_KEY=your-api-secret-key

# Authentication
AUTH_SECRET=your-auth-secret-key
NEXTAUTH_URL=https://tradingfarm.com
NEXTAUTH_SECRET=your-nextauth-secret

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_TRADING=true
NEXT_PUBLIC_ENABLE_RISK_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_MOBILE_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Exchange API Rate Limiting
EXCHANGE_RATE_LIMIT_BYBIT=10
EXCHANGE_RATE_LIMIT_COINBASE=5
EXCHANGE_RATE_LIMIT_DEFAULT=3

# Security Settings
ENCRYPTION_SECRET=your-encryption-secret
CREDENTIAL_ROTATION_DAYS=30
MAX_LOGIN_ATTEMPTS=5
SESSION_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=info
ENABLE_ERROR_REPORTING=true

# Custom Domains
NEXT_PUBLIC_APP_URL=https://tradingfarm.com
NEXT_PUBLIC_DOCS_URL=https://docs.tradingfarm.com
NEXT_PUBLIC_SUPPORT_URL=https://support.tradingfarm.com

# Cache Settings
REDIS_URL=your-redis-url
CACHE_TTL_SECONDS=300

# AI Model Settings
AI_MODEL_API_URL=https://ai-api.tradingfarm.com
AI_MODEL_API_KEY=your-ai-model-api-key
