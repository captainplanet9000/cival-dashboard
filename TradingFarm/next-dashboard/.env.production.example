# Trading Farm Dashboard - Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Environment
NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://dashboard.tradingfarm.com
NEXT_PUBLIC_BASE_URL=https://dashboard.tradingfarm.com/api
VAULT_URL=https://vault.tradingfarm.com
VAULT_API_URL=https://vault.tradingfarm.com/api

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Security
# ENCRYPTION_SECRET must be exactly 32 characters long
ENCRYPTION_SECRET=32-character-secret-key-for-encrypt
# JWT Secret for additional auth verification
JWT_SECRET=your-jwt-secret-for-additional-verification
# CORS allowed origins (comma-separated)
NEXT_PUBLIC_CORS_ALLOWED_ORIGINS=https://vault.tradingfarm.com,https://dashboard.tradingfarm.com

# API Keys for Exchanges (encrypted at rest)
BINANCE_API_KEY=
BINANCE_API_SECRET=
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_API_PASSPHRASE=
COINBASE_API_KEY=
COINBASE_API_SECRET=
BYBIT_API_KEY=
BYBIT_API_SECRET=

# Vault Banking System Integration
VAULT_API_KEY=your-vault-api-key
VAULT_API_SECRET=your-vault-api-secret
VAULT_WEBHOOK_SECRET=your-vault-webhook-verification-secret

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_TRADING=true
NEXT_PUBLIC_ENABLE_AGENT_SYSTEM=true
NEXT_PUBLIC_ENABLE_RISK_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_VAULT_BANKING=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Performance & Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
MONITORING_API_KEY=your-monitoring-api-key
SENTRY_DSN=your-sentry-dsn
ALERT_EMAIL=alerts@tradingfarm.com
LOG_LEVEL=info

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Deployment Settings
DEPLOYMENT_PROVIDER=railway
DEPLOYMENT_PROJECT_ID=your-railway-project-id
NEXT_PUBLIC_DEPLOYMENT_ENVIRONMENT=production