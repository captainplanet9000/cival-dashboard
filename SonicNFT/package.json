{
  "name": "sonic-nft-contract",
  "version": "1.0.0",
  "description": "Sonic NFT Collection smart contract with free mint and reveal mechanic",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sonic": "hardhat run scripts/deploy.js --network sonicnetwork",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network sonictestnet",
    "verify": "hardhat verify --network sonicnetwork",
    "verify:testnet": "hardhat verify --network sonictestnet",
    "node": "hardhat node",
    "metadata": "node scripts/generate-metadata.js",
    "toggle-minting:testnet": "hardhat run scripts/toggleMinting.js --network sonictestnet",
    "reveal:testnet": "hardhat run scripts/revealCollection.js --network sonictestnet",
    "set-base-uri:testnet": "hardhat run scripts/setBaseURI.js --network sonictestnet"
  },
  "keywords": [
    "nft",
    "sonic",
    "ethereum",
    "hardhat",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0"
  }
} 